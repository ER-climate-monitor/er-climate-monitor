{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "bump",
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchManagers": [
        "npm"
      ],
      "matchPaths": [
        "*/package.json"
      ],
      "groupName": "Service Dependencies"
    },
    {
      "matchPaths": [
        "package.json"
      ],
      "matchDatasources": [
        "npm"
      ],
      "groupName": "Root DevTools"
    }
  ],
  "enabledManagers": [
    "npm"
  ],
  "ignorePaths": [
    "node_modules",
    "**/dist",
    "**/build"
  ]
}
